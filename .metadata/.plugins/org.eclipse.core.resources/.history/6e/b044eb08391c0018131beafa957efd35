package br.pro.hashi.ensino.desagil.tequilada;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;
import java.util.Scanner;

public class Main {
	public static void main(String args[]){

		//System.out.println("Projeto 1");

		Scanner scanner = new Scanner(System.in);

		System.out.println("Informe o endereço e nome do arquivo:\n");
		String nomeArq = scanner.nextLine();

		System.out.println("O arquivo possui:\n");
		
		try{
			
			FileReader arquivo = new FileReader(nomeArq);
			BufferedReader lerArq = new BufferedReader(arquivo);
			
			String primeiraLinha = lerArq.readLine();
			while(primeiraLinha != null){
				System.out.printf("%s\n", primeiraLinha);
				
				primeiraLinha = lerArq.readLine();
			}
		
		arquivo.close();
			
		} catch (IOException e){
			
			System.out.printf("Erro ao abrir o arquivo", e.getMessage());
		
		}

		System.out.println();
		
	}
}
